                      <%= if is_immediate_pick do %>
                        <.icon name="hero-check" class="w-4 h-4" />
                        <span>Confirm Pick</span>
                      <% else %>
                        <.icon name="hero-clock" class="w-4 h-4" />
                        <span>Queue Pick</span>
                      <% end %>
                    </button>
                  </div>
                </div>
              </div>
            <% end %>

          <% end %>
        </div>
      </div>
    </div>
  </div>

<!-- Chat Sidebar -->
